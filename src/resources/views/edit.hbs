
<div class="mt-6" style="margin-bottom: 25vh; margin-top: 10vh; ">
<form method="POST" action="/list/{{blog._id}}?_method=PUT">
  <div class="form-group">
    <label for="exampleFormControlInput1">Title</label>
    <input type="text"  class="form-control" value="{{blog.title}}" name="title" >
  </div>
    <div class="form-group">
    <label for="exampleFormControlInput1">Ảnh</label>
    <input type="text"  class="form-control" value="{{blog.img}}" name="img" >
  </div>
      <div class="form-group">
    <label for="exampleFormControlInput1">Author</label>
    <input type="text"  class="form-control" value="{{blog.author}}" name="author" >
  </div>
     <div class="form-group">
    <label for="exampleFormControlInput1">Slug</label>
   <select name="slug" class="form-select" aria-label="Default select example">
  <option id="slug">{{blog.slug}}</option>
  <option value="cuocsong">Cuộc sống</option>
  <option value="khampha">Khám phá</option>
  <option value="taymaytomo">Táy máy tò mò</option>
</select>
  </div>
     <div class="form-group">
    <label for="exampleFormControlInput1">Mô tả</label>
    <input type="text"  class="form-control" value="{{blog.nd}}" name="nd" >
  </div>
   

  <div class="form-group">
    <label for="exampleFormControlTextarea1">Nội dung</label>
    <textarea class="form-control"  value="{{blog.content}}" name="content" id="mytextarea" rows="3">{{blog.content}}</textarea>
  </div>
  <br>
  
  <a class="btn btn-primary" href="/list">BACK</a>
  <button type="submit" class="btn btn-primary">Lưu lại</button>
</form>

</div>